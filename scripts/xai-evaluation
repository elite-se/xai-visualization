#!/bin/env python

import argparse
from xai_visualization.evaluation import evaluation
from xai_visualization.config import Config

if __name__ == "__main__":
    parser = argparse.ArgumentParser("start the evaluation")
    parser.add_argument("--config", type=str, help="the config", required=False)
    args = parser.parse_args()

    config = Config()

    if args.config:
        config.load_json(args.config)
    else:
        config.load_defaults()

    config.print()

    evaluation()
